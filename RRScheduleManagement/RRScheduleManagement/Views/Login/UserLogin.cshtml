<body class="tg-login">

  @using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
       <div>
        <div class="login-form mt-100">
            <div class="mb-30 text-center">
                <img src="../images/logo.png">
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "txtEmail", placeholder="Email ID" })
                </div>
                <p class="validationMsg">@Html.ValidationMessageFor(model => model.Email)</p> 
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", id = "txtPassword", placeholder="Password"})
                </div>
                <p class="validationMsg">@Html.ValidationMessageFor(model => model.Password)</p>
            </div>
            <div class="form-group mt-30">
                <button type="submit" id="btnSubmit" class="btn btn-primary btn-block loginBtnbg"><i class="fa fa-sign-in pr-5" aria-hidden="true"></i>Log in</button>
             @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Sign Up
  </button>*@
                 </div>
            <div class="clearfix">
                <p><a href="" data-toggle="modal" onclick="ShowForgetPasswordModal();">Forgot Password?</a></p>
                <p><a href="" data-toggle="modal" onclick=" ShowRegistrationModal();">Sign Up</a></p>
            </div>
        </div>
    </div>
}




  <!-- Start User Register Modal -->

    <div class="modal fade"  id="UserRegistrationModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="RegistHead">User Registration</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.Email)</label>
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "txtEmailU", placeholder="ex:- john@example.com" })
                                <p class="validationMsg">@Html.ValidationMessageFor(model => model.Email)</p>
                            </div>
                        </div>

                          <div class="col-md-6">
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.Password)</label>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control",@id="txtPasswordU"})
                                <p class="validationMsg">@Html.ValidationMessageFor(model => model.Password)</p>
                            </div>
                        </div>
                    </div>
                   
                     <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.ConfirmPassword)</label>
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control",@id="txtPasswordU"})
                                <p class="validationMsg">@Html.ValidationMessageFor(model => model.ConfirmPassword)</p>
                            </div>
                        </div>

                         <div class="col-md-6">
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.Firstname)</label>
                                @Html.TextBoxFor(model => model.Firstname, new { @class = "form-control",@id="txtFirstname"})
                                <p class="validationMsg">@Html.ValidationMessageFor(model => model.Firstname)</p>
                            </div>
                        </div>
                    </div>
                 
                      <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.Lastname)</label>
                                @Html.TextBoxFor(model => model.Lastname, new { @class = "form-control",@id="txtLastname"})
                                <p class="validationMsg">@Html.ValidationMessageFor(model => model.Lastname)</p>
                            </div>
                        </div>

                           <div class="col-md-6">
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.Gender)</label>
                               <label class="radio-inline">@Html.RadioButtonFor(model => model.Gender, "Male", new { name="Gender" }) Male</label>
                               <label class="radio-inline">@Html.RadioButtonFor(model => model.Gender, "Female",new { name="Gender" }) Female</label>
                                <p class="validationMsg">@Html.ValidationMessageFor(model => model.Gender)</p>
                            </div>
                        </div>
                    </div>
                      <div class="row">
                          <div class="modal-footer">
                              <button type="submit" id="btnSave" class="btn btn-primary">Save</button>
                              <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                          </div>
                      </div>
                </div>
               
            </div>
        </div>
    </div>

   <!--End User Register Modal-->


     <!-- Start Forget Password Modal -->

     <div class="modal fade"  id="ForgetPasswordModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="ForgetHead">Forgot Password</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.Email)</label>
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "txtForgetPassEmail", placeholder = "ex:- john@example.com" })
                                <p class="validationMsg">@Html.ValidationMessageFor(model => model.Email)</p>
                            </div>
                        </div>
                    </div>
                    
                      <div class="row">
                          <div class="modal-footer">
                              <button type="submit" id="btnForgetPassword" class="btn btn-primary">Submit</button>
                              <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                          </div>
                      </div>
                </div>
               
            </div>
        </div>
    </div>

     <!--End Forget Password Modal-->


